{
    "compilerOptions": {
        "target": "ES5",
        "module": "commonjs",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noImplicitAny": false,
        "suppressImplicitAnyIndexErrors": true,
        "rootDir": "src",
        "outDir": "../dist"
    },
    "filesGlob": [
        "../typings/tsd.d.ts",
        "./**/*.ts"
    ],
    "atom": {
        "rewriteTsconfig": false
    }
}
